<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.galix.linguam"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:name=".LinguamApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:configChanges="orientation|screenSize"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.galix.linguam.activity.Home_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.galix.linguam.activity.Translate_Activity"
            android:configChanges="orientation|screenSize"
            android:label="@string/translate_activity_title"
            android:parentActivityName="com.galix.linguam.activity.Home_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.galix.linguam.MainActivity" />
        </activity>
        <activity
            android:name="com.galix.linguam.activity.Game_Activity"
            android:configChanges="orientation|screenSize"
            android:label="@string/game_activity_title"
            android:parentActivityName="com.galix.linguam.activity.Home_Activity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.galix.linguam.MainActivity" />
        </activity>
         <uses-library android:name="android.test.runner" />
    </application>
   

</manifest>
